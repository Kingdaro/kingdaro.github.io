// out: main.css

color-primary = rgba(10, 10, 10, 1)
color-secondary = rgba(white, 0.9)

*
  margin: 0
  padding: 0
  box-sizing: border-box

html, body
  font-family: 'Yanone Kaffeesatz'
  font-size: 18pt
  font-weight: 300

body
  background-color: color-primary

body, a
  color: color-secondary

a
  text-decoration: none

h1, h2, h3, h4, h5, h6
  font-weight: 300

li
  list-style: none

hr
  border: none
  border-bottom: 1px solid rgba(color-secondary, 0.3)


.site-content
  margin: auto
  padding: 30vh 0 30vh

.page-divide
  max-width: 900px
  margin: auto

.social
  width: max-content
  margin: 0px auto 20px

  a
    size = 48px

    margin: 0px 5px
    display: inline-block
    width: size
    height: size
    text-align: center
    line-height: size
    border-bottom: 1px solid rgba(color-secondary, 0.3)

    transition: 0.2s
    &:hover
      background-color: rgba(white, 0.2)

.greeting
  text-align: center

  h1, h2
    margin: auto

  h1
    max-width: 500px
    font-size: 280%
    margin-bottom: 70px

  h2
    max-width: 750px
    font-size: 180%
    margin-bottom: 70px

.projects
  margin: auto
  padding-top: 80px

  .project
    display: block
    max-width: 800px
    height: 200px
    margin: 0px auto 30px
    position: relative

    background-size: cover

    .hover
      position: absolute
      left: 0; right: 0
      top: 0; bottom: 0
      border-bottom: 3px solid transparent
      transition: 0.2s

    &:hover .hover
      background-color: rgba(white, 0.05)
      border-bottom-color: rgba(white, 0.08)

    .project-info
      padding: 10px 20px 15px
      display: flex
      align-items: flex-end
      justify-content: space-between
      position: absolute
      bottom: 0
      left: 0
      right: 0

      h3
        font-size: 150%

      small
        font-size: 70%

.bg-animation
  position: fixed
  left: 0; right: 0
  bottom: 0; top: 0
  pointer-events: none

::-webkit-scrollbar
  width: 10px

  &-track
    background: color-primary

  &-thumb
    background: lighten(color-primary, 5%)
