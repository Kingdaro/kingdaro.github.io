color-primary = rgb(255, 255, 255)
color-secondary = rgb(80, 80, 80)

*
  margin: 0
  padding: 0
  box-sizing: border-box

html, body
  font-family: 'Yanone Kaffeesatz'
  font-size: 18pt
  font-weight: 300

body
  background-color: color-primary
  color: color-secondary

h1, h2, h3, h4, h5, h6
  font-weight: 300

li
  list-style: none

hr
  border: none
  border-bottom: 1px solid rgba(color-secondary, 0.5)


.site-content
  margin: auto
  text-align: center


.greeting
  padding-top: 200px

  h1, h2
    margin: auto

  h1
    max-width: 500px
    font-size: 280%
    margin-bottom: 50px

  h2
    max-width: 750px
    font-size: 180%
    margin-bottom: 30px

.projects
  max-width: 800px
  margin: auto
  padding-top: 80px

  div
    height: 150px

    h3
      font-size: 150%
      text-align: left
      padding: 30px 10px 10px
      border-bottom: 1px solid rgba(color-secondary, 0.5)
