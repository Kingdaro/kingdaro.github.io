// out: main.css

color-primary = rgba(10, 10, 10, 1)
color-secondary = rgba(white, 0.9)

*
  margin: 0
  padding: 0
  box-sizing: border-box

html, body
  font-family: 'Yanone Kaffeesatz'
  font-size: 18pt
  font-weight: 300

body
  background-color: color-primary

body, a
  color: color-secondary

a
  text-decoration: none

h1, h2, h3, h4, h5, h6
  font-weight: 300

li
  list-style: none

hr
  border: none
  border-bottom: 1px solid rgba(color-secondary, 0.3)


.site-content
  margin: auto
  padding: 30vh 0 30vh


.greeting
  text-align: center

  h1, h2
    margin: auto

  h1
    max-width: 500px
    font-size: 280%
    margin-bottom: 70px

  h2
    max-width: 750px
    font-size: 180%
    margin-bottom: 30px

.projects
  margin: auto
  padding-top: 80px

  .project
    max-width: 800px
    height: 200px
    margin: 0px auto 30px
    position: relative
    transition: 0.2s
    display: block
    border-bottom: 3px solid transparent

    &:hover
      background-color: rgba(white, 0.05)
      border-bottom-color: rgba(white, 0.08)

    .project-info
      padding: 10px 20px 15px
      display: flex
      align-items: flex-end
      justify-content: space-between
      position: absolute
      bottom: 0
      left: 0
      right: 0

      h3
        font-size: 150%

      small
        font-size: 70%
